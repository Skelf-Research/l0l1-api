{
  "name": "l0l1-sql-validator",
  "displayName": "l0l1 SQL Validator",
  "description": "AI-powered SQL validation and analysis with PII detection and continuous learning",
  "version": "0.2.0",
  "publisher": "l0l1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Languages",
    "Linters",
    "Machine Learning"
  ],
  "keywords": [
    "sql",
    "validation",
    "ai",
    "machine learning",
    "pii detection",
    "query optimization"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sql",
        "aliases": ["SQL", "sql"],
        "extensions": [".sql"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "l0l1 SQL Validator",
      "properties": {
        "l0l1.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable l0l1 SQL validation"
        },
        "l0l1.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "l0l1 API server URL"
        },
        "l0l1.workspace": {
          "type": "string",
          "default": "vscode",
          "description": "Default workspace name"
        },
        "l0l1.tenantId": {
          "type": "string",
          "default": "vscode_user",
          "description": "Tenant identifier"
        },
        "l0l1.aiProvider": {
          "type": "string",
          "enum": ["openai", "anthropic"],
          "default": "openai",
          "description": "AI provider for SQL analysis"
        },
        "l0l1.enablePiiDetection": {
          "type": "boolean",
          "default": true,
          "description": "Enable PII detection in SQL queries"
        },
        "l0l1.enableLearning": {
          "type": "boolean",
          "default": true,
          "description": "Enable continuous learning from successful queries"
        },
        "l0l1.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate SQL queries on save"
        },
        "l0l1.validateOnType": {
          "type": "boolean",
          "default": false,
          "description": "Validate SQL queries while typing (may impact performance)"
        },
        "l0l1.schemaPath": {
          "type": "string",
          "default": "",
          "description": "Path to database schema file for context-aware validation"
        }
      }
    },
    "commands": [
      {
        "command": "l0l1.validateQuery",
        "title": "Validate SQL Query",
        "category": "l0l1"
      },
      {
        "command": "l0l1.explainQuery",
        "title": "Explain SQL Query",
        "category": "l0l1"
      },
      {
        "command": "l0l1.completeQuery",
        "title": "Complete SQL Query",
        "category": "l0l1"
      },
      {
        "command": "l0l1.checkPii",
        "title": "Check for PII",
        "category": "l0l1"
      },
      {
        "command": "l0l1.anonymizeQuery",
        "title": "Anonymize PII in Query",
        "category": "l0l1"
      },
      {
        "command": "l0l1.showLearningStats",
        "title": "Show Learning Statistics",
        "category": "l0l1"
      },
      {
        "command": "l0l1.setSchema",
        "title": "Set Schema Context",
        "category": "l0l1"
      }
    ],
    "keybindings": [
      {
        "command": "l0l1.validateQuery",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "editorTextFocus && editorLangId == sql"
      },
      {
        "command": "l0l1.explainQuery",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorTextFocus && editorLangId == sql"
      },
      {
        "command": "l0l1.completeQuery",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus && editorLangId == sql"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "l0l1.validateQuery",
          "when": "editorLangId == sql",
          "group": "l0l1@1"
        },
        {
          "command": "l0l1.explainQuery",
          "when": "editorLangId == sql",
          "group": "l0l1@2"
        },
        {
          "command": "l0l1.checkPii",
          "when": "editorLangId == sql",
          "group": "l0l1@3"
        }
      ],
      "commandPalette": [
        {
          "command": "l0l1.validateQuery",
          "when": "editorLangId == sql"
        },
        {
          "command": "l0l1.explainQuery",
          "when": "editorLangId == sql"
        },
        {
          "command": "l0l1.completeQuery",
          "when": "editorLangId == sql"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "vscode-languageclient": "^8.1.0"
  }
}